<div class="mt-4">
  <h3>Edit Product</h3>

  <form method="POST" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
    <div class="form-group mb-3">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group mb-3">
      <label for="description">description</label>
      <input
        type="text"
        class="form-control"
        value="{{course.description}}"
        id="description"
        name="description"
      />
    </div>
    <div class="form-group mb-3">
      <label for="videoId">videoId</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="videoId"
        name="videoId"
      />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>