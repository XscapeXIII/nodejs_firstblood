<div class="mt-4">
  <h3>My Products</h3>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">Stt</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Time create</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit" class="btn btn-link">Update</a>
            <a
              href=""
              class="btn btn-link"
              data-bs-toggle="modal"
              data-bs-target="#delete-modal"
              data-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="delete-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Do you really want delete this product ?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-danger"
          id="btn-delete-product"
        >Delete</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>

      </div>
    </div>
  </div>
</div>

{{! Delete hidden Form }}
<form name="delete-form" method="POST"></form>

<script>
  const exampleModal = document.getElementById('delete-modal'); let productId;
  let deleteForm = document.forms['delete-form']; const btnDeleteProduct =
  document.getElementById("btn-delete-product"); if(exampleModal) {
  exampleModal.addEventListener('show.bs.modal', event => { const button =
  event.relatedTarget; productId = button.getAttribute('data-id');
  console.log(productId); }) }; btnDeleteProduct.onclick = function() {
  deleteForm.action = '/courses/' + productId + '/?_method=DELETE';
  deleteForm.submit(); }
</script>